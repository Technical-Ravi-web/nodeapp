pipeline {
    agent any

    environment {
        APP_DIR = "/home/ubuntu/flaskapp"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/yourname/flaskapp.git'
            }
        }

        stage('Install Requirements') {
            steps {
                sh '''
                    python3 -m venv venv
                    source venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    pkill gunicorn || true
                    nohup gunicorn -w 4 -b 0.0.0.0:5000 app:app > gunicorn.log 2>&1 &
                '''
            }
        }
    }
}
